<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zkfxd.workoutapp.MainActivity"
    android:orientation="vertical">


    <Button
        android:id="@+id/upperButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="workoutUpper"
        android:text="Upper Body" />

    <Button
        android:id="@+id/armsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="workoutArms"
        android:text="Arms" />

    <Button
        android:id="@+id/lowerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="workoutLower"
        android:text="Lower Body" />
</LinearLayout>
